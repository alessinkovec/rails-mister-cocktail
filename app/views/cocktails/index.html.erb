<h1>all my fucken' cockatails</h1>

<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('https://picsum.photos/g/400/500/?image=<%= rand(1..900) %>');">
      <div class="card-category"><%= cocktail.name %></div>
      <div class="card-description"></div>
      <img class="card-user" src="https://picsum.photos/400/500/?image=<%= rand(1..900) %>">
      <a class="card-link" href="cocktails/<%= cocktail.id %>" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>


