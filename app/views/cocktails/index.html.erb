<h1>all my fucken' cockatails</h1>

<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('<%= cl_image_path(cocktail.photo(height: 300, width: 400, crop: :fill)) if cocktail.photo == true %>');">
      <div class="card-category"><%= cocktail.name %></div>
      <div class="card-description"></div>
      <img class="card-user" src="https://picsum.photos/200/200/?image=<%= rand(1..500) %>">
      <a class="card-link" href="cocktails/<%= cocktail.id %>" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>


